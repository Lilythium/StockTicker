extends template

block head 
    script(type="module" src="/js/client/views/waiting_room.js" defer)

block main
    .page-wrapper
        .waiting-container 
            .game-info 
                h1 Waiting Room

            .game-id-display 
                .game-id-label Game ID
                .game-id-value #{game_id}
            
            .share-link
                p <strong>üìã Share this link with friends:</strong>
                    .copy-link
                        input(
                            type="text"
                            id="gameLink"
                            readonly
                        )
                        button#copyButton.copy-button Copy
            
            .players-waiting
                h2 üë• Players (<span id="playerCount">0</span>/4)
                #playerList.player-list
                    .empty-slot Connecting...

            if is_host
                #hostControls
                    button#startGameBtn.start-button(disabled) ‚õî Need 2+ Players

            if !is_host
                #waitingMessage(
                    style="text-align: center; padding: 20px;"
                ) ‚è≥ Waiting for host to start the game...

            .action-buttons(style="margin-top: 20px; text-align: center;")
                button#leaveBtn.btn-leave Leave Game
            
        if is_host
            aside#hostSidebar.host-sidebar
                .sidebar-header
                    h3 ‚öôÔ∏è GAME SETTINGS

                .setting-group
                    label Max Rounds: <span id="val_rounds">15</span>
                    input#range_max_rounds.retro-slider(
                        type="range"
                        min="1"
                        max="50"
                        value="15"
                    )
                
                .setting-group
                    label Trading Timer: <span id="val_trading">2</span> min</label>
                    input#range_trading_duration.retro-slider(
                        type="range"
                        min="1"
                        max="10" value="2"
                    )

                .setting-group
                    label Dice Timer: <span id="val_dice">15</span> sec
                    input#range_dice_duration.retro-slider(
                        type="range"
                        min="0"
                        max="30"
                        value="10"
                    )

                .setting-group
                    label Starting Cash: <span id="val_cash">$5000</span>
                    input#range_starting_cash.retro-slider(
                        type="range"
                        min="500"
                        max="20000"
                        step="500"
                        value="5000"
                    )

                button#resetBtnclass.btn-reset ‚Üª Reset Defaults