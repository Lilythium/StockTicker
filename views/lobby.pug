extends template

block head
    script(type="module" src="/js/client/views/lobby.js" defer)

block main
    .lobby-container
        .lobby-header
            h1 Stock Ticker
        
        .lobby-option
            h2 Player Registration
            form(method="post" action="/join")#joinForm
                .form-group
                    label(for="player_name")
                    input#player_name(
                        type="text"
                        name="player_name"
                        placeholder="TYPE NAME HERE..."
                        required
                        maxlength=20
                        autofocus
                    )
                
                .form-group 
                    label(for=game_id) Game ID
                    .input-wrapper
                        input#game_id(type="text" name="game_id" required maxlength=30)
